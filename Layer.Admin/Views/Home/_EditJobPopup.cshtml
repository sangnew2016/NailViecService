<!-- Edit Job Popup-->
<div id="editJobContainer" class="modal fade">

    <div id="editJobPopup">
        <div class="modal-header">
            <button type="button" class="close">&times;</button>
            <h4 class="modal-title">Edit Job</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-xs-6">

                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="jobTitle" class="control-label col-xs-2">Title</label>
                            <div class="col-xs-10">
                                <textarea id="jobTitle" rows="6" placeholder="Title" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="jobBody" class="control-label col-xs-2">Body</label>
                            <div class="col-xs-10">
                                <textarea id="jobBody" rows="10" placeholder="Body" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="jobImage" class="control-label col-xs-2">Image</label>
                            <div class="col-xs-10">
                                <input type="file" id="jobImage" placeholder="Image" class="form-control">
                            </div>
                        </div>
                    </form>

                </div>
                <div class="col-xs-6">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label for="shopEmail" class="control-label col-xs-4">Email</label>
                            <div class="col-xs-8">
                                <input type="text" id="shopEmail" placeholder="Email" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="shopPhone" class="control-label col-xs-4">Phone</label>
                            <div class="col-xs-8">
                                <input type="text" id="shopPhone" placeholder="Phone" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="shopAddress" class="control-label col-xs-4">Address</label>
                            <div class="col-xs-8">
                                <input type="text" id="shopAddress" placeholder="Address" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-xs-4"></label>
                            <div class="col-xs-8">
                                <ul class="left">
                                    <li class="list-item">
                                        California, USA
                                    </li>
                                    <li class="list-item">
                                        1078 Long Beaches, Ave 12220
                                    </li>
                                    <li class="list-item">
                                        001.714.254.789
                                    </li>
                                </ul>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="jobStatus" class="control-label col-xs-4">Status</label>
                            <div id="jobStatus" class="col-xs-8">
                                <select class="form-control">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="jobType" class="control-label col-xs-4">Type</label>
                            <div class="col-xs-8">
                                <input type="text" id="jobType" placeholder="Type" class="form-control">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="jobPhoneContact" class="control-label col-xs-4">Phone Contact</label>
                            <div class="col-xs-8">
                                <textarea id="jobPhoneContact" rows="3" placeholder="Phone Contact" class="form-control"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="jobSalary" class="control-label col-xs-4">Salary</label>
                            <div class="col-xs-8">
                                <textarea id="jobSalary" rows="3" placeholder="Salary" class="form-control"></textarea>
                            </div>
                        </div>


                    </form>

                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary">Save changes</button>
        </div>
    </div>


</div>
